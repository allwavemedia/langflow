# Langflow Architect - Environment Configuration
# Copy this file to .env.local and configure with your API keys

# --- Core & AI Services ---
# OpenAI API Key (required for CopilotKit)
OPENAI_API_KEY=your_openai_api_key_here

# --- Phase 2: Enhanced Integrations ---

# Web Search (Tavily API)
TAVILY_API_KEY=your_tavily_api_key_here

# Documentation Grounding (GitHub API)
GITHUB_TOKEN=ghp_your-github-token-here
DOCS_WEBHOOK_SECRET=langflow-docs-webhook

# --- Feature Flags ---
# Enable/disable enhanced features at runtime.
FEATURE_SEARCH=true
FEATURE_DOCS_GROUNDING=true
FEATURE_MCP_ORCHESTRATION=false # Not yet implemented
FEATURE_LIVE_REFRESH=true

# --- Performance & Caching ---
# Timeouts and TTLs are in milliseconds.
SEARCH_TIMEOUT_MS=5000
SEARCH_CACHE_TTL_MS=1800000
SEARCH_ENABLE_CACHE=true

DOCS_CACHE_TTL_MS=3600000
DOCS_CACHE_REFRESH_INTERVAL=3600000

RESPONSE_TIME_BUDGET_MS=2000
MEMORY_BUDGET_MB=512
MAX_CACHE_SIZE=1000

# --- Development & Debugging ---
NODE_ENV=development
DEBUG_ENHANCED_FEATURES=false
LOG_LEVEL=info

