# Langflow Architect - Phase 2 Environment Configuration
# Copy this to .env.local and configure with your API keys

# Phase 1 - Core Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Phase 2 - Web Search Integration
TAVILY_API_KEY=your_tavily_api_key_here
SEARCH_TIMEOUT_MS=5000
SEARCH_CACHE_TTL_MS=1800000
SEARCH_ENABLE_CACHE=true

# Phase 2 - Documentation Integration  
GITHUB_TOKEN=your_github_token_here
DOCS_CACHE_TTL_MS=3600000
DOCS_CACHE_REFRESH_INTERVAL=3600000
DOCS_WEBHOOK_SECRET=langflow-docs-webhook

# Phase 2 - Feature Flags
FEATURE_SEARCH=true
FEATURE_DOCS_GROUNDING=true
FEATURE_LIVE_REFRESH=true

# Phase 2 - Performance and Telemetry
RESPONSE_TIME_BUDGET_MS=2000
MEMORY_BUDGET_MB=512
MAX_CACHE_SIZE=1000

# Development/Debug Settings
NODE_ENV=development
DEBUG_ENHANCED_FEATURES=false
LOG_LEVEL=info