# Environment Variables for Enhanced Langflow Architect
# Copy this file to .env.local and configure your API keys

# OpenAI API Key (required for CopilotKit)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Phase 2 Enhancement APIs
# GitHub Token for documentation integration
GITHUB_TOKEN=ghp_your-github-token-here

# Tavily API Key for web search integration
TAVILY_API_KEY=tvly-your-tavily-api-key-here

# Feature Flags for Phase 2 Components
# Enable web search integration (DuckDuckGo + Tavily)
FEATURE_SEARCH=false

# Enable documentation grounding with GitHub API
FEATURE_DOCS_GROUNDING=false

# Enable enhanced MCP server orchestration
FEATURE_MCP_ORCHESTRATION=false

# Development Settings
NODE_ENV=development